<h1>My Books</h1>

<% if flash[:notice] %>
  <div style="color: red;">
    <%= flash[:notice] %>
  </div>
<% end %>
<br/>

<%= link_to("Add New Book", new_book_path, class: 'action new') %>
<div>
    <table style="width: 75%;">
        <tr>
            <th style="border: 1px solid black ;">Book Title</th>
            <th style="border: 1px solid black ;">Author</th>
            <th style="border: 1px solid black ;">Price</th>
            <th style="border: 1px solid black ;">Date</th>
            <th style="border: 1px solid black ;">Book Details </th>
            <th style="border: 1px solid black ;">Edit </th>
            <th style="border: 1px solid black ;">Delete </th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td style="border: 1px solid black ;"><%= book.title %> </td>
            <td style="border: 1px solid black ;"><%= book.author %> </td>
            <td style="border: 1px solid black ;"><%= book.price %> </td>
            <td style="border: 1px solid black ;"><%= book.date %> </td>
            <td style="border: 1px solid black ;"><%= link_to("Details", book_path(book)) %> </td>
            <td style="border: 1px solid black ;"><%= link_to("Edit", edit_book_path(book)) %> </td>
            <td style="border: 1px solid black ;"><%= link_to("Delete", delete_book_path(book)) %> </td>
        </tr>
        <% end %>
    </table>
</div>